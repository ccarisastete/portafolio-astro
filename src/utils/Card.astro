---
const { title, subtitle, date, content = "" } = Astro.props;
---

<div class="bg-background-gray/10 rounded-2xl p-2">
  <h1 class="font-bold text-base text-detail-purple/90">
    {title}
  </h1>
  <h2 class="text-sm">
    {subtitle}
  </h2>
  <h3 class="text-xs text-detail-purple">{date}</h3>
  <div class="text-sm">
    <Fragment set:html={content} />
  </div>
</div>
