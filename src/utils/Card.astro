---
const { title, subtitle, date, content = "" } = Astro.props;
---

<div class="bg-background-gray/30 rounded-2xl p-2">
  <h1 class="font-bold text-xl text-detail-purple/90">
    {title}
  </h1>
  <h2 class="text-md">
    {subtitle}
  </h2>
  <h3 class="text-sm text-detail-purple">{date}</h3>
  <div>
    <Fragment set:html={content} />
  </div>
</div>
