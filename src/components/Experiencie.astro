---
import Card from "../utils/Card.astro";
const work = await Astro.glob("../pages/experiencie/*.md");
---

<div class="p-2">
  <h1 class="font-bold text-2xl text-detail-purple pb-2">Experiencia 🛠️</h1>
  <div class="grid grid-col-3 gap-2">
    {
      work.map((item) => {
        return (
          <Card
            title={item.frontmatter.position}
            subtitle={item.frontmatter.location}
            date={item.frontmatter.date}
            content={item.compiledContent()}
          />
        );
      })
    }
  </div>
</div>
