---
import About from "./About.astro";
import Header from "./Header.astro";
import Education from "./Education.astro";
import Experiencie from "./Experiencie.astro";
import Skills from "./Skills.astro";
---

<div
  class="w-full h-full border-4 border-black bg-black/20 backdrop-blur-md backdrop-saturate-150 shadow-xl"
>
  <div class="grid grid-cols-2 h-full p-2">
    <div class="w-full h-full flex justify-center items-center"><Header /></div>
    <div
      class="w-full h-full flex flex-col no-scrollbar overflow-auto text-right"
    >
      <About />
      <Experiencie />
      <Education />
      <Skills />
    </div>
  </div>
</div>
